<div style="background-color:pink; color:black; padding:20px;">

  <h1>Pesan Baru</h1>

  <%= form_for :pesan, url: pesans_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>

  <div class="dynamic"><%= render 'index_pure' %></div>

  <script>
    $(document).ready(
         function() {
          setInterval(function() {
            $('.dynamic').load('/pesans_pure');
        }, 3000);
    });
  </script>
</div>